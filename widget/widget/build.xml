<?xml version="1.0" encoding="UTF-8"?>
<project name="YuiBase" default="local">
    <description>Component Build File</description>

    <property environment="env" />

    <property file="build.properties" />
    <import file="${builddir}/3.x/bootstrap.xml" description="Default Build Properties and Targets" />

    <target name="register" description="Widget ClassNameManager Combo" depends="YuiModuleTargets.register">
        <concat destfile="${component.builddir}/${component.basefilename}.js" append="true">
            <filelist dir="${srcdir}/build/classnamemanager" files="classnamemanager.js" />
        </concat>
        <concat destfile="${component.builddir}/${component.basefilename}-debug.js" append="true">
            <filelist dir="${srcdir}/build/classnamemanager" files="classnamemanager-debug.js" />
        </concat>
    </target>    
    
</project>
