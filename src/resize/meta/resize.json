{
    "resize": {

        "plugins": {
            "resize-plugin": {
                "requires": [
                    "resize-base"
                ],

                "optional": [
                    "resize-constrain"
                ]
            }
        },
        "submodules": {

            "resize-base": {
                "requires": [
					"widget",
					"substitute",
					"event",
					"oop",
					"dd-drag",
					"dd-delegate",
					"dd-drop"
                ],
                "skinnable": true
            },

            "resize-constrain": {
                "requires": [
	                "plugin",
	                "resize-base"
				]
            },

            "resize-proxy": {
                "requires": [
	                "plugin",
	                "resize-base"
				]
            }
        }
    }
}
