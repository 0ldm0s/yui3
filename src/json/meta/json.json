{
    "json": {
        "use": [
            "json-parse",
            "json-stringify"
        ],
        
        "plugins": {
            "json-parse-polyfill": {
                "requires": [
                    "json-parse"
                ],
                "condition": {
                    "trigger": "json-parse",
                    "test": "json-parse-native-test.js"
                }
            },
            "json-stringify-polyfill": {
                "requires": [
                    "json-stringify"
                ],
                "condition": {
                    "trigger": "json-stringify",
                    "test": "json-stringify-native-test.js"
                }
            }
        },
        
        "submodules": {
            "json-parse": {
                "requires": [
                    "yui-base"
                ]
            },
            "json-stringify": {
                "requires": [
                    "yui-base"
                ]
            }
        }
    }
}
